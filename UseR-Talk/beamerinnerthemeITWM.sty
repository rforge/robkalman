%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Title page style: ITWM
% Extra title page style: ITWM
\setbeamertemplate{title page}[ITWM]
\setbeamertemplate{extra title page}[ITWM]


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Title page layout for ITWM style
% Set frame number back to 1 since title page does not count
\defbeamertemplate*{title page}{ITWM}[1][]
{
  \leavevmode%
  \vbox{
    \vskip0.8mm%
    \begin{beamercolorbox}[#1]{title}
      %\hspace{-36mm}%	
      {\usebeamerfont{title}\inserttitle\par}%
      \vskip0.25em%
      \ifx\insertsubtitle%
        \@empty{\usebeamerfont{subtitle}\vskip1em}%
      \else%
        %\hspace{-36mm}%	
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
      \fi%
    \end{beamercolorbox}%
    \vskip3.7mm%
    \hspace{46mm}\rule{72mm}{0.1pt}%
    \vskip3mm%
    %\rule{-23.3mm}{0pt}
    %\includegraphics[height=25mm]{logo}%
    \includegraphics[width=60mm]{logo_neu}%
    \vskip2mm%
    \hspace{46mm}\rule{72mm}{0.1pt}
  }
  \vfill
  \setcounter{framenumber}{0}
}


%###########################################
% Extra Titlepage with title, subtitle, author and date.
% Without large ITWm logo...
\defbeamertemplate*{extra title page}{ITWM}[1][]
{
  \leavevmode%
  \vbox{
    %\hspace{46mm}%
    \rule{72mm}{0.1pt}%
    \vskip3mm%
    \ifx\insertsubtitle%
      \@empty{\usebeamerfont{subtitle}\vskip1.25em}%
    \else%
      \begin{beamercolorbox}[#1]{title}
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
      \end{beamercolorbox}%
    \fi%
    \vskip10mm%
    \begin{beamercolorbox}[sep=0pt,#1]{author}
      \usebeamerfont{author}\insertauthor
    \end{beamercolorbox}%
    \vskip2mm
    \begin{beamercolorbox}[sep=0pt,#1]{date}
      \usebeamerfont{date}\insertdate
    \end{beamercolorbox}%
    \vskip0.5em
  }
  \vfill
} 




